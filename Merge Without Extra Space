//  Link of the problem:  https://practice.geeksforgeeks.org/problems/merge-two-sorted-arrays/1/

class Solution{
    public:
        void merge(int arr1[], int arr2[], int n, int m) 
        { 
            int i=0;
            while(arr1[n-1-i]>arr2[i] && (i<=m-1 && i<=n-1) )
            {
                swap(arr1[n-1-i], arr2[i]);
                i++;
            }
            
            sort(arr1, arr1+n);
            sort(arr2, arr2+m);
            
        } 
};
