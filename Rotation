// Link for the problem: https://practice.geeksforgeeks.org/problems/rotation4723/1#


//User function template for C++
class Solution{
public:	
	int findKRotation(int arr[], int n) {
	    // code here
	    int i=0;
	    int a[n];
	    for(int i=0; i<n; i++)
	        a[i]= arr[i];
	    sort(a, a+n);
	    while(arr[i]!=a[0])
	    i++;
	    return i;
	    
	}

};
